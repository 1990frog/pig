<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.clinbrain.dip.rest.mapper.DBETLJobMapper">

    <select id="selectModulesByJobIdAndCode" resultType="etlModule">
		select * from etl_module a inner join etl_job_module b on a.module_code = b.module_code
		<if test="jobId != null and jobId != ''">
			and b.job_id = #{jobId}
		</if>

		<if test="moduleCodes != null">
			and a.module_code in
			<foreach collection="moduleCodes" item="item" index="index" open="(" close=")" separator=",">
				#{item}
			</foreach>
		</if>
    </select>

</mapper>
