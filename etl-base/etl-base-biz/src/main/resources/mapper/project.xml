<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.clinbrain.dip.rest.mapper.DBProjectMapper">
    <select id="GetDataBaseByProName" parameterType="int" resultMap="projectModelMap">
        SELECT kp.id, kp.project_name,kp.project_description,kps.schema_name
        FROM kylin_project kp,kylin_projectschema kps
        <where>
            AND kp.id=kps.project_id
            <if test="proId !=null || proId !=''">
                AND kp.id=#{proId}
            </if>
        </where>
    </select>
    <resultMap id="projectModelMap" type="projectModel">
        <id column="id" property="id"/>
        <result column="project_name" property="projectName"/>
        <result column="project_description" property="projectDescription"/>
        <collection property="schemas" ofType="KylinProjectSchema">
            <result column="schema_name" property="schemaName"/>
        </collection>
    </resultMap>



    <resultMap id="projectMap" type="projectModel">
        <id column="id" property="id"/>
        <result column="project_name" property="projectName"/>
        <result column="project_description" property="projectDescription"/>
        <collection property="schemas" column="id" select="selectProjectSchemasByProjectId">
        </collection>
    </resultMap>


    <select id="selectAllProject" resultMap="projectMap">
        SELECT kp.id, kp.project_name,kp.project_description
        FROM kylin_project kp
    </select>

    <select id="selectProjectSchemasByProjectId" resultType="KylinProjectSchema">
        select * from kylin_projectschema where project_id = #{id}
    </select>

    <!--hu merge project_schema.xml to project.xml-->
    <select id="getProIdByProName" parameterType="String" resultType="Integer">
        SELECT id
        FROM kylin_project
        WHERE project_name = #{projectName}
    </select>

    <insert id="newCreateKylinProjectSchema" parameterType="KylinProjectSchema" useGeneratedKeys="true"
            keyProperty="id">
        INSERT INTO kylin_projectschema (
        `schema_name`,
        created_at,
        updated_at,
        `project_id`
        ) VALUES (#{schemaName},now(),now(), #{projectId})
    </insert>



    <delete id="deleteKylinProjectSchema" parameterType="int">
        DELETE FROM kylin_projectschema
        WHERE project_id = #{projectId}
    </delete>


    <select id="selectKylinProjectSchema" parameterType="int" resultType="int">
        SELECT count(*)
        FROM kylin_projectschema
        WHERE project_id = #{projectId}
    </select>


    <select id="getKylinProjectSchemaName" parameterType="int" resultType="String">
        SELECT schema_name
        FROM kylin_projectschema
        WHERE project_id = #{projectId}
    </select>

    <select id="getKylinProjectSchema" parameterType="int" resultMap="kylinProSchema">
        SELECT
        `schema_name`,
        created_at,
        updated_at,
        `project_id`
        FROM kylin_projectschema
        WHERE project_id = #{projectId}
    </select>


    <resultMap id="kylinProSchema" type="KylinProjectSchema">
        <id property="id" column="id"/>
        <result column="schema_name" property="schemaName"/>
        <result column="created_at" property="createdAt"/>
        <result column="updated_at" property="updatedAt"/>
        <result column="project_id" property="projectId"/>
    </resultMap>

    <select id="selectModelCountsByProId" parameterType="int" resultType="int">
        SELECT count(*)
        FROM kylin_model
        WHERE project_id = #{projectId}
    </select>

    <select id="selectCubeCountsByProId" parameterType="int" resultType="int">
        SELECT count(*)
        FROM kylin_cube
        WHERE project_id = #{projectId}
    </select>

</mapper>